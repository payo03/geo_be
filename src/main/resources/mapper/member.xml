<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.geo.task.repository.MemberRepository">

    <select id="selectMember" resultType="Memberonline">
    <![CDATA[
    /* mapperID:com.spring.geo.task.repository.MemberRepository.selectMember */
        select 
            member_status, 
            member_status_description
        from memberonline
    ]]>
    </select>

    <select id="selectMemberList" resultType="Member">
        <![CDATA[
        /* mapperID:com.spring.geo.task.repository.MemberRepository.selectMemberList */
            select *
            from `member`
        ]]>
        </select>

    <insert id="registerMember" parameterType="Member">
    <![CDATA[
    /* mapperID:com.spring.geo.task.repository.MemberRepository.selectMember */
        insert into `member` (
            member_id,
            member_password,
            member_name,
            member_phone_number
        ) values (
            #{memberId},
            #{memberPassword},
            #{memberName},
            #{memberPhoneNumber}
        )
    ]]>
    </insert>

</mapper>